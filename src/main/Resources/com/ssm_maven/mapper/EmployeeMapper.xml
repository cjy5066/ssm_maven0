<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssm_maven.mapper.EmployeeMapper">
    <insert id="save" parameterType="Employee" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into t_user (name,password) values(#{name},#{password})
    </insert>

    <select id="getone" resultType="Employee" parameterType="Long">
        select * from t_user where id=#{id};
    </select>

    <update id="update" parameterType="Employee">
        update  t_user set name=#{name},password=#{password} where id=#{id}
    </update>

    <delete id="delete" parameterType="Long">
        delete  from  t_user where id=#{id}
    </delete>
</mapper>